<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:model="clr-namespace:DrinkDrink.Model"
             xmlns:viewmodel="clr-namespace:DrinkDrink.ViewModel"
             x:DataType="viewmodel:TodayDrinkViewModel"
             x:Class="DrinkDrink.View.HistoryPage"
             Title="HistoryPage">
    <Grid ColumnDefinitions="*,*"
          RowDefinitions="*,Auto">
        <CollectionView Background="Transparent" ItemsSource="{Binding CupCounters}"
                        SelectionMode="None"
                        Grid.ColumnSpan="2">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="model:CupCounter">
                    <Grid Padding="10" VerticalOptions="Center">
                        <Frame HeightRequest="100" Padding="0" VerticalOptions="Center">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer 
                                        CommandParameter="{Binding .}" 
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:TodayDrinkViewModel}}, Path=GoToDetailsCommand}"/>
                            </Frame.GestureRecognizers>
                            <HorizontalStackLayout Spacing="5" VerticalOptions="Center" Padding="10">
                                <Label Text="{Binding Date, StringFormat='{0: MMM dd, ddd}'}" Style="{StaticResource LargeLabel}" Margin="0,0,100,0"/>
                                <Label Text="{Binding Rating}" Style="{StaticResource LargeLabel}"/>
                                <Label Text="{Binding Count}" Style="{StaticResource LargeLabel}"/>
                            </HorizontalStackLayout>
                        </Frame>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <Button Text="Refresh" Grid.Row="1" Grid.ColumnSpan="2" Margin="8"
            Style="{StaticResource ButtonOutline}"
            Command="{Binding GetHistoricalSummaryCommand}" 
            IsEnabled="{Binding IsNotBusy}"/>
    </Grid>
</ContentPage>